# P10k 即时提示(必须在最顶部)
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# 配置目录
export ZSH_CONF_DIR="${ZDOTDIR:-~/zsh}/conf.d"

# 加载自定义配置
source "$ZSH_CONF_DIR/functions.zsh"
source "$ZSH_CONF_DIR/aliases.zsh"
source "$ZSH_CONF_DIR/options.zsh"

# 加载插件
source "$ZSH_CONF_DIR/plugins.zsh"

# 启动 P10k 主题
[[ ! -f ${ZDOTDIR:-~}/p10k.zsh ]] || source ${ZDOTDIR:-~}/p10k.zsh
